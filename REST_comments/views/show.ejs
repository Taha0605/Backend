<%- include('partials/head') %>

<body>
    <h1>Comment ID: <%= comment.id %> </h1>
    <p> <%= comment.comment %> - <b><%= comment.username %> </b> </p>

    <p> <a href="/comments">Back to Comments</a> </p>
    <p> <a href="/comments/<%= comment.id %>/edit">Edit Comment</a> </p>

    <form action="/comments/<%= comment.id %>?_method=DELETE" , method="post">
        <button>Delete Comment</button>
    </form>

</body>
</html>